{#
    Content Image
    Content and image

    @type {include}
    @param {object} image
    @param {object} logo
    @param {string} title
    @param {string} content
    @param {object} link
    @param {bool} reverse

#}

{% set reverse = reverse is defined ? reverse : false %}

<div class="content-image"  data-aos="fade">
    <div class="flex flex-wrap items-center -mx-2.5 {{ reverse ? 'flex-row-reverse' }}">
        <div class="px-2.5 w-full lg:w-1/2 mb-8 lg:mb-0">
            {% if logo is defined %}
                <img data-src="{{ logo.url }}" alt="{{ logo.alt }}" class="lazy-load mb-6">
            {% endif %}
            {% if title is defined %}
                <h4>{{ title }}</h4>
            {% endif %}
            {% if content is defined %}
                <div>{{ content | raw }}</div>
            {% endif %}
             {% if link is defined %}
                <div class="pt-6">
                    <a href="{{ link.url }}" class="link">{{ link.title }}</a>
                </div>
            {% endif %}
        </div>
        <div class="px-2.5 w-full lg:w-1/2">
            {% if image is defined %}
                <div class="content-image__image {{ reverse ? '' : 'lg:ml-auto' }}">
                    {% include '_components/picture' with {'image': image, 'transform': '1x1'} %}
                </div>
            {% endif %}
        </div>

    </div>
</div>