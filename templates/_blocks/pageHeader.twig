{#
   Page Header
   Heading over background

   @type {include}
   @param {string} title
   @param {string} text
   @param {string} image

#}


{% set full = {
    mode: 'crop',
    width: 1600,
    height: 330,
    quality: 75,
    position: 'center'
} %}


<div class="page-header bg-primary theme-dark"  data-aos="fade">
    <div class="py-16 lg:py-28  lazy-load bg-cover bg-center relative" {% if image is defined %}data-bg="{{ image.getUrl(full) }}"{% endif %}>
        <div class="bg-black bg-opacity-40 absolute top-0 left-0 w-full h-full"></div>
        <div class="container mx-auto text-center relative z-10 py-5">
            {% if title is defined %}
                <h1 class="text-3sxl sm:text-5xl lg:text-6sxl mb-0">{{ title }}</h1>
            {% endif %}
            {% if text is defined %}
                <div class="pt-5 max-w-lg mx-auto text-sm leading-loose">{{ text | raw }}</div>
            {% endif %}
        </div>
    </div>
</div>