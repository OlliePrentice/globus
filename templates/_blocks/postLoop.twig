 {#
    Post Loop
    Displays quieried posts

    @type {include}
    @param {string} title
    @param {object} items

#}

<div class="product-loop remove-underline remove-bullets"  data-aos="fade">

    {% if items is defined %}
        <div class="flex flex-wrap -mx-3">
            {% for item in items %}
                <div class="px-3 w-full sm:w-1/2 lg:w-1/3 mb-14">
                    {% include '_components/card/cardPost' with item %}
                </div>
            {% endfor %}
        </div>
        <div class="pt-6 pb-2">
            {% include '_components/pagination' %}
        </div>

    {% else %}
        <h3>No Results Found</h3>
    {% endif %}
   
</div>