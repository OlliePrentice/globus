 {#
    Product Loop
    Displays quieried products

    @type {include}
    @param {string} title
    @param {object} items

#}

<div class="product-loop remove-underline remove-bullets" x-data="{ mobileFilterOpen: false }">
    <div class="flex flex-wrap -mx-3 mb-5"  data-aos="fade">
        <div class="px-3 w-full lg:flex-1">
            {% if title is defined %}
                <h5 class="tracking-tight mb-6 lg:mb-3">{{ title }}</h5>
            {% endif %}
        </div>
        <div class="px-3 mb-3 w-full lg:w-auto">
            <div class="flex flex-wrap -mx-1.5">
                <div class="px-1.5 lg:hidden w-1/2">
                    {% include '_components/field/selectTrigger' with {'placeholder': 'Filter'} %}
                </div>
                <div class="px-1.5 w-1/2 lg:w-auto">
                    {% include '_components/field/sort' with {'name': 'sort', 'placeholder': 'Sort by', 'options': [{'label': 'A-Z', 'value': 'a-z'}, {'label': 'Z-A', 'value': 'z-a'}]} %}
                </div>
            </div>
        </div>
    </div>
    <div class="flex flex-wrap -mx-3">
        <div x-bind:class="{ 'block z-50': mobileFilterOpen, 'hidden': ! mobileFilterOpen }" class="lg:block fixed z-10 top-0 left-0 h-full w-full overflow-y-auto overflow-x-hidden touch-scroll bg-white lg:relative px-5 lg:px-3 lg:w-1/4">
            {% include '_components/product/filter' %}
        </div>
        <div class="px-3 flex-1"  data-aos="fade">
            {% if items is defined %}
                <div class="flex flex-wrap -mx-3">
                    {% for item in items %}
                        <div class="px-3 w-1/2 md:w-1/3 mb-14">
                            {% include '_components/card/cardProduct' with item %}
                        </div>
                    {% endfor %}
                </div>
                <div class="pt-6 pb-2">
                    {% include '_components/pagination' %}
                </div>

            {% else %}
                <h3>No Results Found</h3>
            {% endif %}
        </div>
    </div>
</div>