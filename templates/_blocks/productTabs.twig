{#
   Product tabs
   Product data tabs

   @type {include}

#}

{% set tabColumnClass = 'md:px-5 border-t border-r border-l border-gray-200 md:border-none' %}
{% set tabClass = 'text-base text-black font-medium leading-loose w-full md:w-auto px-5 md:px-0 text-left' %}
{% set tabInnerClass = 'border-b-2 border-transparent py-6 inline-block' %}
{% set tabContentClass = 'px-5 md:px-10 py-8 md:py-16 border-t border-r border-l border-gray-200 md:border-none' %}

<div class="product-tabs border-b md:border border-gray-200 " x-data="{ tab: 'overview' }"  data-aos="fade">
    <div class="md:flex flex-wrap justify-between items-center md:px-5 hidden md:block">
        <div class="{{ tabColumnClass }}">
            <button class="{{ tabClass }}" type="button"  x-on:click="tab = 'overview'"><span class="{{ tabInnerClass }}" x-bind:class="{ 'border-black': tab === 'overview' }">Overview</span></button>
        </div>
        <div class="{{ tabColumnClass }}">
            <button class="{{ tabClass }}" type="button" x-on:click="tab = 'specification'"><span class="{{ tabInnerClass }}" x-bind:class="{ 'border-black': tab === 'specification' }">Specification/Product Codes</span></button>
        </div>
        <div class="{{ tabColumnClass }}">
            <button class="{{ tabClass }}" type="button"  x-on:click="tab = 'links'"><span class="{{ tabInnerClass }}" x-bind:class="{ 'border-black': tab === 'links' }">Useful Links</span></button>
        </div>
        <div class="{{ tabColumnClass }}">
            <button class="{{ tabClass }}" type="button"  x-on:click="tab = 'documentation'"><span class="{{ tabInnerClass }}" x-bind:class="{ 'border-black': tab === 'documentation' }">Documentation</span></button>
        </div>
    </div>
    <div class="md:border-t border-gray-200">
        <div class="{{ tabColumnClass }} md:hidden">
            <button class="{{ tabClass }}" type="button" x-on:click="tab = 'overview'"><span class="{{ tabInnerClass }}" x-bind:class="{ 'border-black': tab === 'overview' }">Overview</span></button>
        </div>
        <div
            x-show="tab === 'overview'"
            class="{{ tabContentClass }}"
        >
            <div class="flex flex-wrap items-center -mx-2.5" x-data="{ open: false }">
                <div class="px-2.5 mb-6 md:mb-0 w-full md:w-1/2">
                    <div class="max-w-md">
                        <h4 class="font-medium text-xl">SHOWA 350R</h4>
                        <p>A flexible and robust grip glove featuring a special synthetic nitrile rubber palm that protects against abrasion and oils.</p>
                    </div>
                </div>
                <div class="px-2.5 w-full mb-6 md:mb-0 md:w-1/2 md:block" x-bind:class="{ 'hidden': ! open }">
                    <img data-src="{{ siteUrl ~ 'uploads/images/data-tabs.png' }}" alt="CE" class="lazy-load">
                </div>
                <div class="px-2.5 md:hidden">
                      <button type="button" class="link" x-on:click="open = ! open" x-text="open ? 'Show Less' : 'Show More'">Show More</button>
                </div>
            </div>
        </div>
        <div class="{{ tabColumnClass }} md:hidden">
            <button class="{{ tabClass }}" type="button"  x-on:click="tab = 'specification'"><span class="{{ tabInnerClass }}" x-bind:class="{ 'border-black': tab === 'specification' }">Specification/Product Codes</span></button>
        </div>
        <div
            x-show="tab === 'specification'"
            class="{{ tabContentClass }}"
        >
            <div class="flex flex-wrap items-center -mx-2.5">
                <div class="px-2.5">
                    <h4 class="font-medium text-xl">Specification</h4>
                    <p>A flexible and robust grip glove featuring a special synthetic nitrile rubber palm that protects against abrasion and oils.</p>
                </div>
            </div>
        </div>
        <div class="{{ tabColumnClass }} md:hidden">
            <button class="{{ tabClass }}" type="button" x-on:click="tab = 'links'"><span class="{{ tabInnerClass }}" x-bind:class="{ 'border-black': tab === 'links' }">Useful Links</span></button>
        </div>
        <div
            x-show="tab === 'links'"
            class="{{ tabContentClass }}"
        >
            <div class="flex flex-wrap items-center -mx-2.5">
                <div class="px-2.5">
                    <h4 class="font-medium text-xl">Links</h4>
                    <p>A flexible and robust grip glove featuring a special synthetic nitrile rubber palm that protects against abrasion and oils.</p>
                </div>
            </div>
        </div>
        <div class="{{ tabColumnClass }} md:hidden">
            <button class="{{ tabClass }}" type="button" x-on:click="tab = 'documentation'"><span class="{{ tabInnerClass }}" x-bind:class="{ 'border-black': tab === 'documentation' }">Documentation</span></button>
        </div>
        <div
            x-show="tab === 'documentation'"
            class="{{ tabContentClass }}"
        >
            <div class="flex flex-wrap items-center -mx-2.5">
                <div class="px-2.5">
                    <h4 class="font-medium text-xl">Documentation</h4>
                    <p>A flexible and robust grip glove featuring a special synthetic nitrile rubber palm that protects against abrasion and oils.</p>
                </div>
            </div>
        </div>
    </div>
</div>