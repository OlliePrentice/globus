<div class="tab-panel flex flex-wrap -mx-2.5"  x-data="{ tab: 'contact' }"  data-aos="fade">
    <div class="px-2.5 remove-bullets w-3/12 hidden lg:block">
        <h3 class="text-xl">Help &amp; Support</h3>
        <ul>
            <li>
                <button type="button" class="{{ tabClass }}" x-bind:class="{ 'bg-white border-gray-200': tab === 'contact' }" x-on:click="tab = 'contact'">Contact Us
                    <span x-bind:class="{ 'rotate-90': tab === 'contact', '-rotate-90': tab !== 'contact'  }" class="transform absolute pointer-events-none top-1/2 right-6 transform -translate-y-1/2">
                        <svg width="9" height="5" xmlns="http://www.w3.org/2000/svg"><g id="Desktop" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><g id="02-Search-Results" transform="translate(-1340 -243)" fill="#000" fill-rule="nonzero"><path d="M1344.886 247.452l3.516-3.52a.546.546 0 00-.386-.932h-7.035a.546.546 0 00-.386.932l3.517 3.52c.213.213.56.213.774 0z" id=""/></g></g></svg>
                    </span>
                </button>
            </li>
            <li>
                <button type="button" class="{{ tabClass }}" x-bind:class="{ 'bg-white border-gray-200': tab === 'locations' }" x-on:click="tab = 'locations'">Our Locations
                    <span x-bind:class="{ 'rotate-90': tab === 'locations', '-rotate-90': tab !== 'locations' }" class="transform absolute pointer-events-none top-1/2 right-6 transform -translate-y-1/2">
                        <svg width="9" height="5" xmlns="http://www.w3.org/2000/svg"><g id="Desktop" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><g id="02-Search-Results" transform="translate(-1340 -243)" fill="#000" fill-rule="nonzero"><path d="M1344.886 247.452l3.516-3.52a.546.546 0 00-.386-.932h-7.035a.546.546 0 00-.386.932l3.517 3.52c.213.213.56.213.774 0z" id=""/></g></g></svg>
                    </span>
                </button>
            </li>
        </ul>
    </div>
    <div class="px-2.5 w-full lg:w-9/12">
        <div class="border-b lg:border-none border-gray-200">
            <div class="lg:hidden">
                <button type="button" class="{{ tabClass }}" x-bind:class="{ 'bg-white': tab === 'contact' }" x-on:click="tab = 'contact'">Contact Us</button>
            </div>
            <div
                x-show="tab === 'contact'"
                class="{{ tabContentClass }}"
            >
                <h4 class="mb-8 hidden lg:block">Contact Us Today</h4>
                <div class="lg:border-t border-b border-gray-200 pb-6 md:py-8 lg:text-sm">
                    <div class="flex flex-wrap justify-between -mx-2.5">
                        <div class="px-2.5 w-full md:max-w-1/3 mb-4 text-center">
                    
                                <p>
                                    <strong>Phone:</strong><br>
                                    +44 (0)161 877 4747<br>
                                    <strong>Fax:</strong><br>
                                    +44 (0)161 877 4646
                                </p>
            
                        </div>
                        <div class="px-2.5 w-full md:max-w-1/3 mb-4 text-center">
                            <p>
                                <strong>Email:</strong><br>
                                sales@globus.co.uk
                            </p>
                        </div>
                        <div class="px-2.5 w-full md:max-w-1/3 mb-4 text-center">
                        
                                <p>
                                    <strong>Globus Group Headquarters</strong><br>
                                    T2 Trafford Point, Twining Road,
                                    Trafford Park, Manchester,
                                    M17 1SH
                                </p>
                            
                        </div>
                    </div>
                </div>
                <form class="remove-bullets pt-8">
                    <ul class="flex flex-wrap -mx-2.5 mb-0">
                        <li class="px-2.5 w-full md:w-1/2 mb-5">
                            {% include '_components/field/input' with {'name': 'name', 'label': 'Name'} %}
                        </li>
                        <li class="px-2.5  w-full md:w-1/2 mb-5">
                            {% include '_components/field/input' with {'name': 'phone', 'label': 'Phone'} %}
                        </li>
                        <li class="px-2.5  w-full md:w-1/2 mb-5">
                            {% include '_components/field/input' with {'name': 'email', 'label': 'Email'} %}
                        </li>
                        <li class="px-2.5  w-full md:w-1/2 mb-5">
                            {% include '_components/field/input' with {'name': 'company', 'label': 'Company'} %}
                        </li>
                        <li class="px-2.5  w-full md:w-1/2 mb-5">
                            {% include '_components/field/input' with {'name': 'industry', 'label': 'Industry'} %}
                        </li>
                        <li class="px-2.5  w-full md:w-1/2 mb-5">
                            {% include '_components/field/select' with {'name': 'reason', 'label': 'Reason for Enquiry', 'placeholder': 'Please select one', 'options': [{'value': 'one', 'label': 'One'}, {'value': 'two', 'label': 'Two'}]} %}
                        </li>
                        <li class="px-2.5  w-full md:w-full mb-5">
                            {% include '_components/field/textarea' with {'name': 'message', 'label': 'Your Message', 'placeholder': 'How can we help today?'} %}
                        </li>
                    </ul>
                    <div class=" w-full md:w-1/2 pt-2 pb-6">
                        {% include '_components/button/submit' with {'type': 'button', 'button': {'text': 'Send Messsage'}} %}
                    </div>
                    <p class="text-xs font-normal">By submitting this form, you agree to the <a href="/privacy" class="text-gray-700">Privacy Policy</a> of this site</p>
                </form>
            </div>
            <div class="lg:hidden">
                <button type="button" class="{{ tabClass }}" x-bind:class="{ 'bg-white': tab === 'locations' }" x-on:click="tab = 'locations'">Our Locations</button>
            </div>
            <div
                x-show="tab === 'locations'"
                class="{{ tabContentClass }}"
            >
                <h4 class="mb-8 hidden lg:block">Our Locations</h4>
                <div class="lg:border-t border-gray-200 py-8 lg:text-sm">
                    {% for row in locationData %}
                    <div class="flex flex-wrap justify-between -mx-2.5 mb-16 md:mb-6 last:mb-0">
                        {% for location in row %}
                            <div class="px-2.5 w-full md:max-w-1/3 mb-4 text-center">
                                <p>
                                    {{ location.text | raw }}
                                </p>
                            </div>
                        {% endfor %}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
