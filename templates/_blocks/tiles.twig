{#
    Tiles
    Content in grid

    @type {include}
    @param {object} items

#}

{% if items is defined %}
    <div class="flex flex-wrap -mx-2.5 tiles"  data-aos="fade">
        {% for item in items %}
            <div class="px-2.5 w-full sm:w-1/2 lg:w-1/3 mb-5">
                <div class="bg-white text-center pt-10 pb-12 px-7 h-full">
                    {% if item.image is defined %}
                        <div class="tiles__logo mx-auto flex items-center mb-5">
                            <img data-src="{{ item.image.url }}" alt="{{ item.image.alt }}" class="lazy-load mx-auto">
                        </div>
                    {% endif %}
                    {% if item.text is defined %}
                        <div>
                            {{ item.text | raw }}
                        </div>
                    {% endif %}
                    {% if item.link is defined %}
                        <div class="pt-6">
                            <a href="{{ item.link.url }}" class="link">{{ item.link.title }}</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}