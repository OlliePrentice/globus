{#
   Card Category
   Card for displaying categories or pages

   @type {include}
   @param {object} href
   @param {object} image
   @param {string} title
#}

<div class="card-category text-center">
    {% if href is defined %}
        <a href="{{ href }}" class="block group">
    {% endif %}
            <div class="relative mb-6 overflow-hidden">
                {% if image is defined %}
                    <div class="transition transform group-hover:scale-110">
                        {% include '_components/picture' with {'image': image, 'transform': '1x1'} %}
                    </div>
                {% endif %}
            </div>
            {% if title is defined %}
                <h5 class="inline-block border-b-2 border-black leading-tight text-base mb-1 text-black relative z-10 font-extrabold">{{ title }}</h5>
            {% endif %}
    {% if href is defined %}
        </a>
    {% endif %}
</div>