{#
   Footer Bar
   Bottom site bar containing legal and copyright links

   @type {include}

#}

{% set liClass = '
    px-4
    text-xs
    tracking-wide
    text-gray-400
    mb-1
    md:mb-0
    w-full 
    md:w-auto
'
%}

{% set siteLinks = [
    {'href': '#', 'title': 'Terms & Conditions'},
    {'href': '#', 'title': 'Privacy Policy'},
    {'href': '#', 'title': 'Modern Slavery Act'}
] 
%}

<div class="bg-black py-10 md:py-12">
    <div class="container mx-auto text-center md:text-left">
        <div class="flex flex-wrap items-center -mx-4 xl:-mx-8">
            <div class="px-4 w-full md:flex-1 remove-underline">
                {% if siteLinks is defined %}
                    <ul class="flex flex-wrap -mx-2  mb-0">
                        <li class="{{ liClass }}">&copy; Globus (Shetland) Ltd 2020</li>
                        {% for link in siteLinks %}
                            <li class="{{ liClass }}"><a href="{{ link.href }}" class="text-gray-400 hover:text-white">{{ link.title }}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
            <div class="px-4 pt-5 md:pt-0 w-full md:w-auto">
                <p class="text-xs tracking-wide text-gray-400">Website Design <a href="#" class="underline text-gray-400 hover:text-white">MadeByShape</a></p>
            </div>
        </div>
    </div>
</div>