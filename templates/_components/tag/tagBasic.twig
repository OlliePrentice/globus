{#
   Tag basic
   Tag with icon and text

   @type {include}
   @param {string} text

#}

{% if text is defined %}
        <span class="text-sm leading-tight flex justify-center items-center">
            {% if icon is defined %}<img src="{{ icon.url }}" alt="{{ icon.alt }}" class="mr-1">{% endif %}
            <span class="text-gray-700">{{ text }}</span>
        </span>

{% endif %}